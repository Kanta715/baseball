<h1>動画検索</h1>

<%= form_with model: @post, local: true do |f| %>
    <div class="form-group">
        <label>カテゴリー</label>
        <%= f.select :category, class: "form-controll" %>
    </div>

    <div class="form-group">
        <label>詳細カテゴリー</label>
        <%= f.select :tag, class: "form-control" %>
    </div>
<% end %>